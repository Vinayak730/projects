<h1>Games For Sale</h1>

<% @product.each do |product| %>
    <div class="well">
        <div class="row">
            <div class="col-sm-6">
                <h3><%= product.title %></h3>
            </div>
            
            <div class="cpl-sm-4">
                <div class="pull-right">
                <%= form_for(@order_item) do |f| %>
                    <%= f.hidden_field :product_id,values: product.id %>
                    <h5><%= product.price %></h5>
                    <div class="form-group">
                        <%= f.text_field :quantity ,value: 1, min: 1,class: 'form-control'%>
                    </div>
                    <%= f.submit "Add to cart", class: 'btn btn-primary-sm'%>
                <% end %>
                </div>
            </div>
        </div>
    </div>

<% end  %>
